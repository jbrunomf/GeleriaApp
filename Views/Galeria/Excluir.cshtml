@model App.Models.Galeria

@{
    ViewBag.Titulo = "Exclusão de Galeria de Imagen";
}

<form method="post">
    <input type="hidden" asp-for="@Model.IdGaleria">
    <div class="mt-3">
        <h3>Tem certeza que deseja excluir a galeria de imagens <b>@Model.Titulo</b>?</h3>
    </div>
    <div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button class="btn btn-danger" type="submit">Excluir</button>
        </div>
    </div>
</form>